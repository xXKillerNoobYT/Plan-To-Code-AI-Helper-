{
    "name": "copilot-orchestration-extension",
    "displayName": "Copilot Orchestration Extension (COE)",
    "description": "AI-powered development orchestration with MCP server, GitHub Issues sync, and multi-agent workflows",
    "version": "0.1.0",
    "publisher": "your-publisher-name",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "coe.activate",
                "title": "COE: Activate Orchestration"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "coe-sidebar",
                    "title": "COE Orchestration",
                    "icon": "resources/coe-icon.svg"
                }
            ]
        },
        "views": {
            "coe-sidebar": [
                {
                    "id": "coe-tasks",
                    "name": "Tasks Queue"
                },
                {
                    "id": "coe-plans",
                    "name": "Plans & Status"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "test:unit": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^20.x",
        "@types/jest": "^29.5.0",
        "@types/mocha": "^10.0.6",
        "@types/glob": "^8.1.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "typescript": "^5.3.0",
        "@vscode/test-electron": "^2.3.8",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.0",
        "mocha": "^10.2.0",
        "glob": "^10.3.10"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "@octokit/rest": "^20.0.2",
        "json-rpc-2.0": "^1.6.0",
        "ws": "^8.16.0"
    },
    "configuration": {
        "title": "COE Extension",
        "properties": {
            "coe.mcpServer.enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable MCP server for AI agent communication"
            },
            "coe.github.enabled": {
                "type": "boolean",
                "default": false,
                "description": "Enable GitHub Issues synchronization"
            },
            "coe.github.syncInterval": {
                "type": "number",
                "default": 5,
                "description": "GitHub sync interval in minutes"
            },
            "coe.github.owner": {
                "type": "string",
                "default": "",
                "description": "GitHub repository owner"
            },
            "coe.github.repository": {
                "type": "string",
                "default": "",
                "description": "GitHub repository name"
            },
            "coe.ui.showStatusBar": {
                "type": "boolean",
                "default": true,
                "description": "Show COE status in status bar"
            }
        }
    }
}