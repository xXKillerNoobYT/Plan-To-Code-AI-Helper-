{
    "name": "copilot-orchestration-extension",
    "displayName": "Copilot Orchestration Extension (COE)",
    "description": "AI-powered development orchestration with MCP server, GitHub Issues sync, and multi-agent workflows",
    "version": "0.1.0",
    "publisher": "your-publisher-name",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "coe.activate",
                "title": "COE: Activate Orchestration"
            },
            {
                "command": "coe.regeneratePRD",
                "title": "COE: Regenerate PRD from Plans"
            },
            {
                "command": "coe.testOrchestrator",
                "title": "COE: Test Orchestrator"
            },
            {
                "command": "coe.processTask",
                "title": "COE: Process Specific Task"
            },
            {
                "command": "coe.testCreateTicket",
                "title": "COE: Test Create Ticket"
            },
            {
                "command": "coe.testRouteTicket",
                "title": "COE: Test Boss AI Router"
            },
            {
                "command": "coe.cleanupHistory",
                "title": "COE: Cleanup Old Completed Tasks"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "coe-sidebar",
                    "title": "COE Orchestration",
                    "icon": "resources/coe-icon.svg"
                },
                {
                    "id": "coe-views",
                    "title": "COE",
                    "icon": "media/coe-icon.svg"
                }
            ]
        },
        "views": {
            "coe-sidebar": [
                {
                    "id": "coe-tasks",
                    "name": "Tasks Queue"
                },
                {
                    "id": "coe-plans",
                    "name": "Plans & Status"
                }
            ],
            "coe-views": [
                {
                    "id": "coe-task-queue",
                    "name": "Task Queue"
                },
                {
                    "id": "coe-completed-history",
                    "name": "Completed History"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "test:unit": "jest --watch --coverage --detectOpenHandles",
        "test:once": "jest --coverage",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "update-prd": "node -r ts-node/register src/scripts/update-prd.ts",
        "prepare": "husky",
        "quality:check": "jest tests/__tests__/quality-gates.test.ts --coverage",
        "quality:watch": "jest tests/__tests__/quality-gates.test.ts --watch --coverage",
        "coverage:report": "jest --coverage && node -e \"console.log('Coverage report generated. Check .vscode/quality DIAGNOSTICS-diagnostics.json for details.')\""
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.14",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.x",
        "@types/sqlite3": "^3.1.11",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.54.0",
        "glob": "^10.3.10",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.7",
        "mocha": "^10.8.2",
        "sinon": "^21.0.1",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.26.0",
        "@octokit/rest": "^20.0.2",
        "json-rpc-2.0": "^1.6.0",
        "sqlite3": "^5.1.7",
        "ws": "^8.16.0",
        "zod": "^3.22.4"
    },
    "configuration": {
        "title": "COE Extension",
        "properties": {
            "coe.mcpServer.enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable MCP server for AI agent communication"
            },
            "coe.github.enabled": {
                "type": "boolean",
                "default": false,
                "description": "Enable GitHub Issues synchronization"
            },
            "coe.github.syncInterval": {
                "type": "number",
                "default": 5,
                "description": "GitHub sync interval in minutes"
            },
            "coe.github.owner": {
                "type": "string",
                "default": "",
                "description": "GitHub repository owner"
            },
            "coe.github.repository": {
                "type": "string",
                "default": "",
                "description": "GitHub repository name"
            },
            "coe.ui.showStatusBar": {
                "type": "boolean",
                "default": true,
                "description": "Show COE status in status bar"
            },
            "coe.logLevel": {
                "type": "string",
                "enum": [
                    "debug",
                    "info",
                    "warn",
                    "error"
                ],
                "default": "info",
                "description": "Minimum log level to display in COE Orchestrator output channel. 'debug' shows all logs, 'error' shows only errors."
            },
            "coe.llm.url": {
                "type": "string",
                "default": "http://192.168.1.205:1234/v1/chat/completions",
                "description": "Full OpenAI-compatible endpoint URL"
            },
            "coe.llm.model": {
                "type": "string",
                "default": "mistralai/ministral-3-14b-reasoning",
                "description": "Model name"
            },
            "coe.llm.maxOutputTokens": {
                "type": "integer",
                "default": 2000,
                "minimum": 512,
                "maximum": 8192,
                "description": "Max tokens the model is allowed to generate in reply"
            },
            "coe.llm.inputTokenLimit": {
                "type": "integer",
                "default": 4000,
                "minimum": 1000,
                "maximum": 32000,
                "description": "Maximum tokens allowed in the prompt we send (input context limit)"
            },
            "coe.llm.timeoutSeconds": {
                "type": "integer",
                "default": 300,
                "minimum": 60,
                "description": "How long to wait for response before timeout (seconds)"
            },
            "coe.history.retention": {
                "type": "object",
                "default": {
                    "maxAgeHours": 168,
                    "maxCount": 0
                },
                "description": "Completed tasks retention settings. maxAgeHours: delete tasks older than N hours (0=disabled). maxCount: keep only last N tasks (0=unlimited).",
                "properties": {
                    "maxAgeHours": {
                        "type": "integer",
                        "default": 168,
                        "minimum": 0,
                        "description": "Delete completed tasks older than N hours. Set 0 to disable age-based cleanup."
                    },
                    "maxCount": {
                        "type": "integer",
                        "default": 0,
                        "minimum": 0,
                        "description": "Keep only the last N completed tasks. Set 0 to keep all (unlimited)."
                    }
                }
            }
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "tsc --noEmit"
        ],
        "tests/**/*.ts": [
            "eslint --fix"
        ],
        "*.ts": [
            "eslint --fix"
        ]
    }
}